{
    "name": "dteelsalvador/php-dte-signer",
    "description": "PHP SDK for signing Documentos Tributarios Electr√≥nicos (DTE) for El Salvador using JWS RS512",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "dte",
        "el-salvador",
        "electronic-invoice",
        "jws",
        "rs512",
        "digital-signature"
    ],
    "authors": [
        {
            "name": "Mario",
            "email": "mario@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-openssl": "*",
        "ext-libxml": "*",
        "lcobucci/jwt": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "DteSigner\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DteSigner\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html tests/coverage/html",
        "analyse": "phpstan analyse src tests --level=8",
        "check": [
            "@analyse",
            "@test"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}