{
  "name": "marzsv/sv-dte-signer",
  "description": "PHP SDK for signing Documentos Tributarios Electrónicos (DTE) for El Salvador using JWS RS512",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "dte",
    "el-salvador",
    "factura-electronica"
  ],
  "authors": [
    {
      "name": "Mario Juárez",
      "email": "marzsv@users.noreply.github.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-openssl": "*",
    "ext-libxml": "*",
    "firebase/php-jwt": "^6.11"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "Marzsv\\DteSigner\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Marzsv\\DteSigner\\Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html tests/coverage/html",
    "analyse": "phpstan analyse src tests --level=8",
    "check": [
      "@analyse",
      "@test"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
